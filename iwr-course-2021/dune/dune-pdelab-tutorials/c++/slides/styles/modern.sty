% Auto TOC 

% TOC Before Section 
\AtBeginSection[]{  
    \begin{frame}<beamer>{\contentsname}
        \tableofcontents[currentsection]
    \end{frame}
}
% TOC Before SubSection 
\AtBeginSubsection[]{
    \begin{frame}<beamer>{\contentsname}
          \tableofcontents[currentsection,currentsubsection]
     \end{frame}
}


